{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "outDir": "./build",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    // "node_modules/use-global-hook"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules/jsonx/**/*.test.ts",
    "node_modules/jsonx/**/*.test.tsx"
  ],
  "typedocOptions": {
    "out": "docs",
    "includes": "manual",
    "entryPoints": [
      "src/index.ts"
    ],
    "media": "./manual/media",
    "hideGenerator": true
  }
}
